<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Tienda Virtual</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/energetic.css" rel="stylesheet">
</head>
<body>
    <!-- Navegación -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-store"></i> Tienda Virtual
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/categorias">
                            <i class="fas fa-tags"></i> Categorías
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/productos">
                            <i class="fas fa-box"></i> Productos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/clientes">
                            <i class="fas fa-users"></i> Clientes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/ventas">
                            <i class="fas fa-shopping-cart"></i> Ventas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/catalogo">
                            <i class="fas fa-book"></i> Catálogo
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main class="container mt-4">
        <!-- Mostrar mensajes -->
        <% if (mensaje) { %>
        <div class="alert alert-<%= mensaje.tipo === 'success' ? 'success' : 'danger' %> alert-dismissible fade show" role="alert">
            <i class="fas fa-<%= mensaje.tipo === 'success' ? 'check-circle' : 'exclamation-triangle' %>"></i>
            <%= mensaje.texto %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
        <% } %>

        <!-- Encabezado -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="h3 text-dark mb-1">
                            <i class="fas fa-shopping-cart text-primary"></i> Gestión de Ventas
                        </h1>
                        <p class="text-muted mb-0">Administra todas las ventas y transacciones</p>
                    </div>
                    <a href="/ventas/crear" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus"></i> Nueva Venta
                    </a>
                </div>
            </div>
        </div>

        <!-- Tarjetas de Estadísticas -->
        <div class="row mb-4">
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="d-flex align-items-center justify-content-center mb-2">
                            <div class="rounded-circle bg-primary bg-opacity-10 p-3">
                                <i class="fas fa-shopping-cart fa-2x text-primary"></i>
                            </div>
                        </div>
                        <h3 class="card-title h4 mb-1"><%= estadisticas.total_ventas || 0 %></h3>
                        <p class="card-text text-muted mb-0">Total Ventas</p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="d-flex align-items-center justify-content-center mb-2">
                            <div class="rounded-circle bg-success bg-opacity-10 p-3">
                                <i class="fas fa-check-circle fa-2x text-success"></i>
                            </div>
                        </div>
                        <h3 class="card-title h4 mb-1"><%= estadisticas.ventas_pagadas || 0 %></h3>
                        <p class="card-text text-muted mb-0">Ventas Pagadas</p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="d-flex align-items-center justify-content-center mb-2">
                            <div class="rounded-circle bg-warning bg-opacity-10 p-3">
                                <i class="fas fa-clock fa-2x text-warning"></i>
                            </div>
                        </div>
                        <h3 class="card-title h4 mb-1"><%= estadisticas.ventas_pendientes || 0 %></h3>
                        <p class="card-text text-muted mb-0">Ventas Pendientes</p>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-3 col-md-6 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="d-flex align-items-center justify-content-center mb-2">
                            <div class="rounded-circle bg-info bg-opacity-10 p-3">
                                <i class="fas fa-dollar-sign fa-2x text-info"></i>
                            </div>
                        </div>
                        <h3 class="card-title h4 mb-1">$<%= (estadisticas.total_ingresos || 0).toLocaleString() %></h3>
                        <p class="card-text text-muted mb-0">Total Ingresos</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filtros -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <form method="GET" action="/ventas" class="row g-3">
                            <div class="col-md-4">
                                <label for="estado" class="form-label">
                                    <i class="fas fa-filter"></i> Filtrar por Estado
                                </label>
                                <select name="estado" id="estado" class="form-select">
                                    <option value="todos" <%= filtros.estado === 'todos' ? 'selected' : '' %>>
                                        Todos los estados
                                    </option>
                                    <option value="pagado" <%= filtros.estado === 'pagado' ? 'selected' : '' %>>
                                        Pagadas
                                    </option>
                                    <option value="pendiente" <%= filtros.estado === 'pendiente' ? 'selected' : '' %>>
                                        Pendientes
                                    </option>
                                    <option value="parcial" <%= filtros.estado === 'parcial' ? 'selected' : '' %>>
                                        Pagos Parciales
                                    </option>
                                    <option value="cancelado" <%= filtros.estado === 'cancelado' ? 'selected' : '' %>>
                                        Canceladas
                                    </option>
                                </select>
                            </div>
                            
                            <div class="col-md-6">
                                <label for="buscar" class="form-label">
                                    <i class="fas fa-search"></i> Buscar Venta
                                </label>
                                <input type="text" 
                                       name="buscar" 
                                       id="buscar"
                                       class="form-control" 
                                       placeholder="Buscar por ID, cliente o teléfono..."
                                       value="<%= filtros.buscar %>">
                            </div>
                            
                            <div class="col-md-2 d-flex align-items-end">
                                <button type="submit" class="btn btn-primary w-100">
                                    <i class="fas fa-filter"></i> Filtrar
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabla de Ventas -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-list"></i> Lista de Ventas
                            <span class="badge bg-primary ms-2"><%= ventas.length %></span>
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <% if (ventas.length > 0) { %>
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th scope="col" class="text-center">ID</th>
                                        <th scope="col">Cliente</th>
                                        <th scope="col" class="text-center">Fecha</th>
                                        <th scope="col" class="text-center">Productos</th>
                                        <th scope="col" class="text-end">Total</th>
                                        <th scope="col" class="text-center">Estado</th>
                                        <th scope="col" class="text-center">Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% ventas.forEach(venta => { %>
                                    <tr>
                                        <td class="text-center align-middle">
                                            <strong class="text-primary">#<%= venta.id %></strong>
                                        </td>
                                        <td class="align-middle">
                                            <div>
                                                <h6 class="mb-0"><%= venta.cliente_nombre || 'Cliente no encontrado' %></h6>
                                                <% if (venta.cliente_celular) { %>
                                                <small class="text-muted">
                                                    <i class="fas fa-phone"></i> <%= venta.cliente_celular %>
                                                </small>
                                                <% } %>
                                            </div>
                                        </td>
                                        <td class="align-middle text-center">
                                            <%= new Date(venta.fecha).toLocaleDateString('es-ES') %>
                                        </td>
                                        <td class="align-middle text-center">
                                            <span class="badge bg-info">
                                                <i class="fas fa-box"></i> <%= venta.total_productos || 0 %>
                                            </span>
                                        </td>
                                        <td class="align-middle text-end">
                                            <strong class="text-success">$<%= venta.total_a_pagar.toLocaleString() %></strong>
                                        </td>
                                        <td class="align-middle text-center">
                                            <% if (venta.estado_pago === 'pagado') { %>
                                                <span class="badge bg-success">
                                                    <i class="fas fa-check-circle"></i> Pagado
                                                </span>
                                            <% } else if (venta.estado_pago === 'parcial') { %>
                                                <span class="badge bg-info text-dark">
                                                    <i class="fas fa-hand-holding-usd"></i> Parcial
                                                </span>
                                            <% } else if (venta.estado_pago === 'cancelado') { %>
                                                <span class="badge bg-secondary">
                                                    <i class="fas fa-ban"></i> Cancelado
                                                </span>
                                            <% } else { %>
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-clock"></i> Pendiente
                                                </span>
                                            <% } %>
                                        </td>
                                        <td class="align-middle text-center">
                                            <div class="btn-group" role="group">
                                                <a href="/ventas/<%= venta.id %>" 
                                                   class="btn btn-sm btn-outline-info"
                                                   title="Ver detalles">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="/ventas/<%= venta.id %>/editar" 
                                                   class="btn btn-sm btn-outline-primary"
                                                   title="Editar">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <button type="button" 
                                                        class="btn btn-sm btn-outline-danger btn-eliminar"
                                                        data-id="<%= venta.id %>"
                                                        data-cliente="<%= venta.cliente_nombre %>"
                                                        title="Eliminar">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                                <% if (venta.estado_pago !== 'cancelado') { %>
                                                <button type="button" 
                                                        class="btn btn-sm btn-outline-secondary btn-cancelar"
                                                        data-id="<%= venta.id %>"
                                                        data-cliente="<%= venta.cliente_nombre %>"
                                                        title="Cancelar venta">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                                <% } %>
                                            </div>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                        <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No se encontraron ventas</h5>
                            <p class="text-muted mb-3">No hay ventas que coincidan con los filtros aplicados.</p>
                            <a href="/ventas/crear" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Crear Primera Venta
                            </a>
                        </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>

        <!-- Modal de confirmación para eliminar -->
        <div class="modal fade" id="modalEliminar" tabindex="-1" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">
                            <i class="fas fa-exclamation-triangle text-warning"></i> Confirmar Eliminación
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>¿Estás seguro de que deseas eliminar la venta del cliente <strong id="nombreCliente"></strong>?</p>
                        <div class="alert alert-warning">
                            <i class="fas fa-info-circle"></i> Esta acción restaurará el stock de los productos y no se puede deshacer.
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                        <button type="button" class="btn btn-danger" id="confirmarEliminar">
                            <i class="fas fa-trash"></i> Eliminar
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <script>
    let ventaAEliminar = null;
    let ventaACancelar = null;

        // Event listener para botones de eliminar
        document.addEventListener('click', function(e) {
            if (e.target.closest('.btn-eliminar')) {
                const btn = e.target.closest('.btn-eliminar');
                const id = btn.dataset.id;
                const cliente = btn.dataset.cliente;
                eliminarVenta(id, cliente);
            }
            if (e.target.closest('.btn-cancelar')) {
                const btn = e.target.closest('.btn-cancelar');
                const id = btn.dataset.id;
                const cliente = btn.dataset.cliente;
                cancelarVenta(id, cliente);
            }
        });
        async function cancelarVenta(id, cliente) {
            if (!confirm(`¿Cancelar la venta #${id} del cliente ${cliente}? Se restaurará el stock.`)) return;
            try {
                const resp = await fetch(`/ventas/${id}/cancelar`, { method: 'POST' });
                const json = await resp.json();
                if (!json.success) throw new Error(json.mensaje || 'No se pudo cancelar');
                // Mostrar alerta rápida
                const alertContainer = document.createElement('div');
                alertContainer.innerHTML = `
                    <div class="alert alert-secondary alert-dismissible fade show" role="alert">
                        <i class="fas fa-ban"></i> ${json.mensaje}
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                `;
                document.body.insertBefore(alertContainer, document.body.firstChild);
                setTimeout(() => window.location.reload(), 1200);
            } catch (e) {
                alert('Error al cancelar: ' + e.message);
            }
        }

        function eliminarVenta(id, cliente) {
            ventaAEliminar = id;
            document.getElementById('nombreCliente').textContent = cliente;
            new bootstrap.Modal(document.getElementById('modalEliminar')).show();
        }

        document.getElementById('confirmarEliminar').addEventListener('click', async function() {
            if (!ventaAEliminar) return;

            try {
                const response = await fetch(`/ventas/${ventaAEliminar}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    // Cerrar modal
                    bootstrap.Modal.getInstance(document.getElementById('modalEliminar')).hide();
                    
                    // Mostrar mensaje de éxito
                    const alertContainer = document.createElement('div');
                    alertContainer.innerHTML = `
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> ${result.mensaje}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    `;
                    document.body.insertBefore(alertContainer, document.body.firstChild);
                    
                    // Recargar la página después de un momento
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    throw new Error(result.mensaje);
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error al eliminar la venta: ' + error.message);
            }
        });

        // Auto-envío del formulario de filtros al cambiar el estado
        document.getElementById('estado').addEventListener('change', function() {
            this.form.submit();
        });
        </script>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
        <script src="/js/motivational-effects.js"></script>
    </main>
</body>
</html>