<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Tienda Virtual</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/energetic.css" rel="stylesheet">
</head>
<body>
    <!-- Navegación -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-store"></i> Tienda Virtual MVC
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/categorias">
                            <i class="fas fa-tags"></i> Categorías
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/productos">
                            <i class="fas fa-box"></i> Productos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/clientes">
                            <i class="fas fa-users"></i> Clientes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ventas">
                            <i class="fas fa-shopping-cart"></i> Ventas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/catalogo">
                            <i class="fas fa-book"></i> Catálogo
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main class="container mt-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2">
                    <i class="fas fa-user text-info"></i> <%= cliente.nombre %>
                </h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/clientes">Clientes</a></li>
                        <li class="breadcrumb-item active"><%= cliente.nombre %></li>
                    </ol>
                </nav>
            </div>
            <div>
                <a href="/clientes/<%= cliente.id %>/editar" class="btn btn-warning me-2">
                    <i class="fas fa-edit"></i> Editar
                </a>
                <button class="btn btn-success me-2" 
                        data-cliente-id="<%= cliente.id %>"
                        data-cliente-nombre="<%= cliente.nombre %>"
                        onclick="enviarCatalogo(this)">
                    <i class="fab fa-whatsapp"></i> Enviar Catálogo
                </button>
                <a href="/clientes" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Volver
                </a>
            </div>
        </div>

        <div class="row">
            <!-- Información del cliente -->
            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-info-circle"></i> Información del Cliente
                        </h5>
                    </div>
                    <div class="card-body">
                        <table class="table table-sm">
                            <tr>
                                <td><strong>ID:</strong></td>
                                <td>#<%= cliente.id %></td>
                            </tr>
                            <tr>
                                <td><strong>Nombre:</strong></td>
                                <td><%= cliente.nombre %></td>
                            </tr>
                            <tr>
                                <td><strong>Celular:</strong></td>
                                <td>
                                    <i class="fas fa-phone text-success"></i> 
                                    <%= cliente.celular %>
                                    <br>
                                    <small class="text-muted">
                                        WhatsApp: +502<%= cliente.celular %>
                                    </small>
                                </td>
                            </tr>
                            <tr>
                                <td><strong>Correo:</strong></td>
                                <td>
                                    <% if (cliente.correo) { %>
                                        <i class="fas fa-envelope text-info"></i> 
                                        <%= cliente.correo %>
                                    <% } else { %>
                                        <span class="text-muted">No especificado</span>
                                    <% } %>
                                </td>
                            </tr>
                        </table>

                        <div class="d-grid gap-2">
                            <a href="/clientes/<%= cliente.id %>/editar" class="btn btn-warning">
                                <i class="fas fa-edit"></i> Editar Cliente
                            </a>
                            <% if (stats.totalCompras === 0) { %>
                                <form method="POST" action="/clientes/<%= cliente.id %>" 
                                      onsubmit="return confirm('¿Estás seguro de eliminar este cliente?')">
                                    <input type="hidden" name="_method" value="DELETE">
                                    <button type="submit" class="btn btn-danger w-100">
                                        <i class="fas fa-trash"></i> Eliminar Cliente
                                    </button>
                                </form>
                            <% } else { %>
                                <button class="btn btn-outline-secondary" disabled>
                                    <i class="fas fa-lock"></i> No se puede eliminar
                                </button>
                                <small class="text-muted text-center">
                                    El cliente tiene compras registradas
                                </small>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Estadísticas del cliente -->
                <div class="card mt-3">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-chart-bar"></i> Estadísticas
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-6">
                                <h4 class="text-primary"><%= stats.totalCompras %></h4>
                                <small class="text-muted">Compras</small>
                            </div>
                            <div class="col-6">
                                <h4 class="text-success">$<%= stats.totalGastado.toFixed(2) %></h4>
                                <small class="text-muted">Total Gastado</small>
                            </div>
                        </div>
                        <hr>
                        <div class="text-center">
                            <small class="text-muted">
                                <i class="fas fa-calendar-alt"></i> 
                                Última compra: 
                                <% if (stats.ultimaCompra) { %>
                                    <%= new Date(stats.ultimaCompra).toLocaleDateString('es-ES') %>
                                <% } else { %>
                                    Sin compras
                                <% } %>
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Historial de compras -->
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-shopping-cart"></i> Historial de Compras
                        </h5>
                    </div>
                    <div class="card-body">
                        <% if (compras.length === 0) { %>
                            <div class="text-center py-4">
                                <i class="fas fa-shopping-cart fa-3x text-muted mb-3"></i>
                                <h6 class="text-muted">No hay compras registradas</h6>
                                <p class="text-muted">Las compras de este cliente aparecerán aquí</p>
                                <a href="/ventas/crear" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Registrar Primera Venta
                                </a>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="table-light">
                                        <tr>
                                            <th>ID Venta</th>
                                            <th>Fecha</th>
                                            <th>Productos</th>
                                            <th>Total</th>
                                            <th>Estado</th>
                                            <th>Acciones</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% compras.forEach(compra => { %>
                                            <tr>
                                                <td>#<%= compra.id %></td>
                                                <td>
                                                    <%= new Date(compra.fecha).toLocaleDateString('es-ES') %>
                                                </td>
                                                <td>
                                                    <span class="badge bg-info">
                                                        <%= compra.total_productos %> productos
                                                    </span>
                                                </td>
                                                <td>
                                                    <span class="badge bg-success">
                                                        $<%= parseFloat(compra.total_a_pagar).toFixed(2) %>
                                                    </span>
                                                </td>
                                                <td>
                                                    <% if (compra.estado_pago === 'pagado') { %>
                                                        <span class="badge bg-success">Pagado</span>
                                                    <% } else { %>
                                                        <span class="badge bg-warning">Pendiente</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <a href="/ventas/<%= compra.id %>" 
                                                       class="btn btn-sm btn-outline-info">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            <p>&copy; <%= new Date().getFullYear() %> Tienda Virtual MVC - Proyecto Académico</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/motivational-effects.js"></script>

    <script>
        function enviarCatalogo(button) {
            const clienteId = button.getAttribute('data-cliente-id');
            const clienteNombre = button.getAttribute('data-cliente-nombre');
            
            if (confirm(`¿Enviar catálogo por WhatsApp a ${clienteNombre}?`)) {
                // Aquí se implementará la funcionalidad de WhatsApp
                alert('Funcionalidad de WhatsApp se implementará en el caso de uso del catálogo');
                
                // Ejemplo de lo que se hará después:
                // window.location.href = `/catalogo/generar?cliente_id=${clienteId}`;
            }
        }
    </script>
</body>
</html>