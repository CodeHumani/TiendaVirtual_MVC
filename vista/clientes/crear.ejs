<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Tienda Virtual</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/css/energetic.css" rel="stylesheet">
</head>
<body>
    <!-- Navegación -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand" href="/">
                <i class="fas fa-store"></i> Tienda Virtual
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/categorias">
                            <i class="fas fa-tags"></i> Categorías
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/productos">
                            <i class="fas fa-box"></i> Productos
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="/clientes">
                            <i class="fas fa-users"></i> Clientes
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/ventas">
                            <i class="fas fa-shopping-cart"></i> Ventas
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/catalogo">
                            <i class="fas fa-book"></i> Catálogo
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main class="container mt-4">
        <!-- Header -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h1 class="h2"><i class="fas fa-user-plus text-success"></i> <%= title %></h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="/clientes">Clientes</a></li>
                        <li class="breadcrumb-item active">Registrar</li>
                    </ol>
                </nav>
            </div>
            <a href="/clientes" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Volver
            </a>
        </div>

        <!-- Formulario -->
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-user"></i> Información del Cliente
                        </h5>
                    </div>
                    <div class="card-body">
                        <!-- Mostrar errores -->
                        <% if (errors && errors.length > 0) { %>
                            <div class="alert alert-danger">
                                <h6><i class="fas fa-exclamation-triangle"></i> Errores de validación:</h6>
                                <ul class="mb-0">
                                    <% errors.forEach(error => { %>
                                        <li><%= error %></li>
                                    <% }); %>
                                </ul>
                            </div>
                        <% } %>

                        <form method="POST" action="/clientes">
                            <div class="row">
                                <div class="col-md-12 mb-3">
                                    <label for="nombre" class="form-label">
                                        <i class="fas fa-user"></i> Nombre Completo *
                                    </label>
                                    <input type="text" 
                                           class="form-control <%= errors && errors.some(e => e.includes('nombre')) ? 'is-invalid' : '' %>" 
                                           id="nombre" 
                                           name="nombre" 
                                           value="<%= cliente.nombre || '' %>"
                                           placeholder="Ej: María González"
                                           maxlength="255"
                                           required>
                                    <div class="form-text">
                                        El nombre debe tener entre 2 y 255 caracteres.
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="celular" class="form-label">
                                        <i class="fas fa-phone"></i> Número de Celular *
                                    </label>
                                    <input type="tel" 
                                           class="form-control <%= errors && errors.some(e => e.includes('celular')) ? 'is-invalid' : '' %>" 
                                           id="celular" 
                                           name="celular" 
                                           value="<%= cliente.celular || '' %>"
                                           placeholder="50275123456"
                                           minlength="10"
                                           maxlength="19"
                                           required>
                                    <div class="form-text">
                                        Número de WhatsApp: debe tener entre 10 y 19 caracteres numéricos.
                                        <br><strong>Requerido para envío de catálogo por WhatsApp.</strong>
                                    </div>
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label for="correo" class="form-label">
                                        <i class="fas fa-envelope"></i> Correo Electrónico (opcional)
                                    </label>
                                    <input type="email" 
                                           class="form-control <%= errors && errors.some(e => e.includes('correo')) ? 'is-invalid' : '' %>" 
                                           id="correo" 
                                           name="correo" 
                                           value="<%= cliente.correo || '' %>"
                                           placeholder="cliente@email.com"
                                           maxlength="255">
                                    <div class="form-text">
                                        Opcional, pero útil para comunicaciones adicionales.
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a href="/clientes" class="btn btn-outline-secondary me-md-2">
                                    <i class="fas fa-times"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="fas fa-save"></i> Registrar Cliente
                                </button>
                            </div>
                        </form>
                    </div>
                </div>

                <!-- Información adicional -->
                <div class="card mt-4">
                    <div class="card-body">
                        <h6><i class="fas fa-info-circle text-info"></i> Información</h6>
                        <ul class="list-unstyled mb-0">
                            <li><i class="fas fa-check text-success"></i> El número de celular es obligatorio para el envío de catálogos por WhatsApp</li>
                            <li><i class="fas fa-check text-success"></i> Los números deben seguir el formato guatemalteco (8 dígitos iniciando con 7)</li>
                            <li><i class="fas fa-check text-success"></i> El correo electrónico es opcional pero recomendado</li>
                            <li><i class="fas fa-check text-success"></i> Una vez registrado, podrás enviar catálogos directamente por WhatsApp</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-5">
        <div class="container">
            <p>&copy; <%= new Date().getFullYear() %> Tienda Virtual - Proyecto Académico</p>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/motivational-effects.js"></script>

    <script>
        document.getElementById('celular').addEventListener('input', function(e) {
            const value = e.target.value;
            const cleanValue = value.replace(/\D/g, '');
            const isValid = cleanValue.length >= 10 && cleanValue.length <= 19;
            
            if (value && !isValid) {
                e.target.classList.add('is-invalid');
                e.target.setCustomValidity('El número debe tener entre 10 y 19 caracteres numéricos');
            } else {
                e.target.classList.remove('is-invalid');
                e.target.setCustomValidity('');
            }
        });

        // Permitir solo números en el campo celular
        document.getElementById('celular').addEventListener('keypress', function(e) {
            const char = String.fromCharCode(e.which);
            if (!/[0-9]/.test(char)) {
                e.preventDefault();
            }
        });

        // Validación adicional al enviar el formulario
        document.querySelector('form').addEventListener('submit', function(e) {
            const celular = document.getElementById('celular').value;
            const cleanCelular = celular.replace(/\D/g, '');
            
            if (cleanCelular.length < 10 || cleanCelular.length > 19) {
                e.preventDefault();
                alert('El número de celular debe tener entre 10 y 19 caracteres numéricos');
                document.getElementById('celular').focus();
            }
        });
    </script>
</body>
</html>